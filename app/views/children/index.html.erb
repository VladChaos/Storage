<h1>Listing children</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Surname</th>
    <th>Age</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @children.each do |child| %>
  <tr>
    <td><%= child.name %></td>
    <td><%= child.surname %></td>
    <td><%= child.age %></td>
    <td><%= link_to 'Show', child, :class=>"btn btn-primary" %></td>
    <td><%= link_to 'Edit', edit_child_path(child), :class=>"btn btn-primary" %></td>
    <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />
<div class="btn-group">
  <%= link_to 'New Child', new_child_path, :class=>"btn btn-success" %>
  <%= link_to 'Listing Mothers', mothers_path, :class=>"btn btn-success" %>
  <%= link_to 'Home', {:controller => :welcome, :action => :index}, :class=>"btn btn-success" %>
</div>